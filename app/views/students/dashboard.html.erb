<% if $stu.present? %>
<div id="admindashboard" style="border-style:inset;margin-top:55px;padding-right:2px;padding-left:2px;padding-bottom:120px;">
<table class="table">
  <thead class="thead-dark">
    <tr>
      </th>
      <th scope="col">
        <%= link_to 'View-Profile',view_student_profile_path,style:"font-size:21px;color:yellow;text-decoration: none;"%>
      </th>
      <th scope="col">
        <%= link_to 'Assignments',student_assignment_path,style: "font-size:21px;color:yellow;text-decoration: none;"  %>
      </th>
      <th scope="col">
        <%= link_to 'Search Result',student_result_path,style: "font-size:21px;color:yellow;text-decoration: none;"  %>
      </th>
      <th>
        <%= link_to 'Sign-out', student_signout_path ,style: "font-size:21px;color:yellow;text-decoration: none;" %>
      </th>
    </tr>
  </thead>
</table>
<br>
<div style="width:130px; height:auto;margin-left:20px">
  <%= image_tag($stu.studentimage,style:"padding-right:20px ;float:left;
      width:100%;") %>
</div>
<br>
<h5 style="color: blue";>Hello, <%= $stu.first_name %> <%=$stu.last_name%></h5>
<h4>Wel-come in Student Dashboard</h4>
<br>
<br>
</div>
