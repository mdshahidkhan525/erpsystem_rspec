<html>
<head>
<style>
table, th, td {
  border: 1px solid black;
  text-align:center;
}
table{
 border-collapse: collapse;
}
</style>
</head>

<body>

<h1 align="center">Student Result</h1>

<p align="right"><%= link_to "Download Result",student_result_details_path(format: :pdf) %></p>

<p align="right"><%= link_to 'Back to Search',student_result_path %></p>

<br>
<!-- percent calculation -->
<% @per=$res.obtained_marks.to_f/5 %>
<% @hm= $res.hindi %>
<% @em=$res.english%>
<% @sm=$res.science%>
<% @ssm=$res.social_science %>
<% @mm=$res.maths %>





<div class="jumbotron">
<!-- student data -->
<h1 align="center" style="color:maroon;font-family:Trattatello, fantasy">Sunshine Public School</h1>
<br><br>
<div style="width:120px; height:auto">
    <%= image_tag($sname.studentimage,style:"float:left;
      width:100%;") %>
</div>

<h5 style="color:maroon" align="right">Name: <%= $sname.first_name %> <%= $sname.last_name %></h5>


<h5 style="color:maroon" align="right">Father Name: <%= $sname.father_name %></h5>
<h5 style="color:maroon" align="right">Roll Number: <%= $sname.roll_no %></h5>
<h5 style="color:maroon" align="right">Class: <%= $sname.student_class %></h5>

<% if (@em and @hm and @em and @sm and @ssm and @mm)!= nil %>
<div>
    <br>
    <br>
    <table align="center">
      <tr>
        <th>Subject Code</th>
        <th>Subject Name</th>
        <th>Minimum Marks</th>
        <th>Maximum Marks</th>
        <th>Marks Obtained</th>
        <th>Remarks</th>
      </tr>

      <tr>
        <td>S101</td>
        <td>Science</td>
        <td>33</td>
        <td>100</td>
        <td><%=@sm%></td>
        <td><%=$res.remark%></td>
      </tr>

      <tr>
        <td>H102</td>
        <td>Hindi</td>
        <td>33</td>
        <td>100</td>
        <td><%=@hm%></td>
        <td><%=$res.remark%></td>
      </tr>

      <tr>
        <td>E103</td>
        <td>English</td>
        <td>33</td>
        <td>100</td>
        <td><%=@em%></td>
        <td><%=$res.remark%></td>
      </tr>

      <tr>
        <td>S104</td>
        <td>Social-Science</td>
        <td>33</td>
        <td>100</td>
        <td><%=@ssm%></td>
        <td><%=$res.remark%></td>
      </tr>

      <tr>
        <td>M105</td>
        <td>Maths</td>
        <td>33</td>
        <td>100</td>
        <td><%=@mm%></td>
        <td><%=$res.remark%></td>
      </tr>

      <tr>
        <td></td>
        <td></td>
        <td><b>Total</b></td>
        <td style="color:blue";><b><%=$res.total%></b></td>
        <td style="color:blue";><b><%=$res.obtained_marks%></b></td>
        <td style="color:red";><b><%=$res.remark%></b></td>
      </tr>
    </table>
</div>
<% else %>
    <br>
    <h2>Result in Process..</h2>
<% end %>
<br>
<br><br><br>
<br>
<h4 style="color:black;margin-left:40px;">Result :</h4>
<h5 style="color:red;margin-left:60px;">You are <%=$res.remark%>ED!!</h5>
<br>
</div>
</body>
</html>